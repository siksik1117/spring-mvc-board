<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mappers.board">

	<!-- 게시물 목록 -->
	<select id="list" resultType="com.board.domain.BoardVO">
		select * from board.tbl_board
	</select>
	
	<!-- 게시물 작성 -->
	<insert id="write" parameterType="com.board.domain.BoardVO">
		insert into tbl_board(title,content,users) values (#{title}, #{content}, #{users})
	</insert>
	
	<!-- 게시물 조회 -->
	<select id="view" parameterType="int" resultType="com.board.domain.BoardVO">
		select * from board.tbl_board where id = #{id}
	</select>
	
	<!-- 게시물 수정 -->
	<update id="modify" parameterType="com.board.domain.BoardVO">
	update tbl_board set title=#{title}, content=#{content}, users=#{users} where id=#{id}
	</update>
	
	<!-- 게시물 삭제 -->
	<delete id="delete" parameterType="int">
	delete from tbl_board where id = #{id}
	</delete>
	
	<!-- 게시물 총 개수 -->
	<select id="count" resultType="int">
	select count(id) from tbl_board
	</select>
	
	<!-- 게시물 목록 + 페이징 -->
	<select id="listPage" parameterType="hashMap" resultType="com.board.domain.BoardVO">
	select * from tbl_board order by id desc limit #{displayPost}, #{postNum}
	</select>

</mapper>